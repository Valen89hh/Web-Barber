---
import Card from "../components/Card.astro"
import Layout from "../layouts/Layout.astro"
import Header from "../components/general/header/Header.astro"
import About from "../components/general/about/About.astro"
import Services from "../components/general/services/Services.astro"
import CallToAction from "../components/general/calltoaction/CallToAction.astro"
import Why from "../components/general/why/Why.astro"
import Footer from "../components/general/footer/Footer.astro"
---

<Layout title="Web Barber">
	<Header/>
	<About/>
	<Services/>
	<CallToAction/>
	<Why/>
	<Footer/>
</Layout>


<script>

    // Función para manejar el evento de scroll
    function handleScroll() {
      // Obtenemos todas las secciones
      const section = document.getElementById('hero');
	  const sectionOcultar = document.getElementById("hero-contact")


		if(section){
			// Obtenemos el rectángulo que representa la sección
			const rect = section.getBoundingClientRect();

			// Verificamos si la parte superior e inferior de la sección está dentro de la ventana
			if (rect.top >= 0 && rect.bottom <= window.innerHeight) {
			console.log(`Estás dentro de la sección ${section.id}`);
				sectionOcultar?.classList.remove("visible-item")
				sectionOcultar?.classList.add("oculto")
			} else {
			console.log(`Estás fuera de la sección ${section.id}`);
				sectionOcultar?.classList.remove("oculto")
				sectionOcultar?.classList.add("visible-item")
			}
		}
    }

    // Agregamos el evento de scroll al documento
    document.addEventListener('scroll', handleScroll);
  </script>

   


